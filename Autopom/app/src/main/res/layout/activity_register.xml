<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register.RegisterActivity">
    
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_register"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="식물 등록하기"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/light_gray"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="완료"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"/>
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/tv_register_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내 식물에 대해 알려주세요!"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tb_register"/>
    
    <ImageButton
        android:id="@+id/ib_register_select"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/outline_camera_alt_24"
        android:layout_marginTop="30dp"
        android:background="@drawable/radius_5"
        android:backgroundTint="@color/light_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_register_notice"/>

    <TextView
        android:id="@+id/tv_register_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="식물 사진을 등록해주세요"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@id/ib_register_select"
        app:layout_constraintEnd_toEndOf="@+id/ib_register_select"
        app:layout_constraintTop_toBottomOf="@id/ib_register_select"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="식물 이름"
        android:textSize="10sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="7dp"
        app:layout_constraintStart_toStartOf="@id/et_register_plantName"
        app:layout_constraintBottom_toTopOf="@id/et_register_plantName"/>
        
    <EditText
        android:id="@+id/et_register_plantName"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/register"
        app:layout_constraintStart_toStartOf="@id/ib_register_select"
        app:layout_constraintEnd_toEndOf="@id/ib_register_select"
        app:layout_constraintTop_toBottomOf="@id/tv_register_register"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="키우기 시작한 날짜"
        android:textSize="10sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="7dp"
        app:layout_constraintStart_toStartOf="@id/et_register_plantDate"
        app:layout_constraintBottom_toTopOf="@id/et_register_plantDate"/>

    <EditText
        android:id="@+id/et_register_plantDate"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/register"
        app:layout_constraintStart_toStartOf="@id/et_register_plantName"
        app:layout_constraintEnd_toEndOf="@id/et_register_plantName"
        app:layout_constraintTop_toBottomOf="@id/et_register_plantName"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="식물 이름"
        android:textSize="10sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="7dp"
        app:layout_constraintStart_toStartOf="@id/et_register_plantNick"
        app:layout_constraintBottom_toTopOf="@id/et_register_plantNick"/>

    <EditText
        android:id="@+id/et_register_plantNick"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/register"
        app:layout_constraintStart_toStartOf="@id/et_register_plantDate"
        app:layout_constraintEnd_toEndOf="@id/et_register_plantDate"
        app:layout_constraintTop_toBottomOf="@id/et_register_plantDate"/>

        

</androidx.constraintlayout.widget.ConstraintLayout>