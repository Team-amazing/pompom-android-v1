<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="600dp"
    tools:context=".home.MyPlantFragment"
    android:background="@drawable/my_plant_back">

    <ImageView
        android:id="@+id/iv_my_plant_pot"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/my_plant_pot"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_my_plant_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/light_black"
        android:text="+ 12"
        android:fontFamily="@font/ibm_bold"
        app:layout_constraintTop_toTopOf="@id/iv_my_plant_pot"
        app:layout_constraintBottom_toBottomOf="@id/iv_my_plant_pot"
        app:layout_constraintStart_toEndOf="@id/iv_my_plant_pot"/>

    <TextView
        android:id="@+id/tv_my_plant_name"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="나의 팜팜이"
        android:gravity="center"
        android:background="@drawable/my_plant_name_tag"
        android:layout_marginTop="100dp"
        android:textColor="@color/light_black"
        android:textSize="18sp"
        android:fontFamily="@font/ibm_semibold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/iv_my_plant_pot1"
        android:layout_width="144dp"
        android:layout_height="145dp"
        android:src="@drawable/my_plant1"
        android:layout_marginBottom="125dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/iv_my_plant_pot2"
        android:layout_width="144dp"
        android:layout_height="182dp"
        android:src="@drawable/my_plant2"
        android:layout_marginBottom="125dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/iv_my_plant_pot3"
        android:layout_width="144dp"
        android:layout_height="174dp"
        android:src="@drawable/my_plant3"
        android:layout_marginBottom="125dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/iv_my_plant_pot4"
        android:layout_width="144dp"
        android:layout_height="260dp"
        android:src="@drawable/my_plant4"
        android:layout_marginBottom="125dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/iv_my_plant_pot5"
        android:layout_width="154dp"
        android:layout_height="291dp"
        android:src="@drawable/my_plant5"
        android:layout_marginBottom="125dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/iv_my_plant_pot6"
        android:layout_width="152dp"
        android:layout_height="317dp"
        android:src="@drawable/my_plant6"
        android:layout_marginBottom="125dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/pb_my_plant_state"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:max="100"
        android:progress="20"
        android:layout_marginTop="30dp"
        android:progressDrawable="@drawable/my_plant_state"
        android:layout_marginBottom="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_my_plant_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/light_black"
        android:text="20%"
        android:fontFamily="@font/ibm_semibold"
        app:layout_constraintStart_toStartOf="@id/pb_my_plant_state"
        app:layout_constraintEnd_toEndOf="@id/pb_my_plant_state"
        app:layout_constraintTop_toBottomOf="@id/pb_my_plant_state"/>



</androidx.constraintlayout.widget.ConstraintLayout>