<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ranking.RankingActivity"
    android:background="@drawable/ranking_back">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_ranking"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="랭킹"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/ibm_medium"
            android:layout_gravity="center"/>
    </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/iv_ranking_bord"
        android:layout_width="340dp"
        android:layout_height="400dp"
        android:background="@drawable/ranking_board"
        android:elevation="10dp"
        android:layout_marginBottom="40dp"
        tools:listitem="@layout/item_ranking"
        android:paddingStart="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_ranking_second"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/round"
        android:backgroundTint="@color/light_gray"
        android:layout_marginBottom="130dp"
        android:layout_marginStart="35dp"
        app:layout_constraintStart_toStartOf="@id/iv_ranking_bord"
        app:layout_constraintBottom_toTopOf="@id/iv_ranking_bord"/>

    <TextView
        android:id="@+id/tv_ranking_second_man"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이은성"
        android:textColor="@color/light_black"
        android:textSize="14sp"
        android:fontFamily="@font/ibm_semibold"
        app:layout_constraintStart_toStartOf="@id/iv_ranking_second"
        app:layout_constraintEnd_toEndOf="@id/iv_ranking_second"
        app:layout_constraintBottom_toTopOf="@id/iv_ranking_second"/>

    <TextView
        android:id="@+id/tv_ranking_second_p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0P"
        android:fontFamily="@font/ibm_medium"
        android:textSize="12sp"
        android:textColor="@color/real_gray"
        app:layout_constraintStart_toStartOf="@id/iv_ranking_second"
        app:layout_constraintEnd_toEndOf="@id/iv_ranking_second"
        app:layout_constraintTop_toBottomOf="@id/iv_ranking_second"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_ranking_first"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/round"
        android:backgroundTint="@color/light_gray"
        android:layout_marginBottom="180dp"
        app:layout_constraintStart_toStartOf="@id/iv_ranking_bord"
        app:layout_constraintEnd_toEndOf="@id/iv_ranking_bord"
        app:layout_constraintBottom_toTopOf="@id/iv_ranking_bord"/>

    <TextView
        android:id="@+id/tv_ranking_first_man"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="일은성"
        android:textColor="@color/light_black"
        android:textSize="14sp"
        android:fontFamily="@font/ibm_semibold"
        app:layout_constraintStart_toStartOf="@id/iv_ranking_first"
        app:layout_constraintEnd_toEndOf="@id/iv_ranking_first"
        app:layout_constraintBottom_toTopOf="@id/iv_ranking_first"/>

    <TextView
        android:id="@+id/tv_ranking_first_p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0P"
        android:fontFamily="@font/ibm_medium"
        android:textSize="12sp"
        android:textColor="@color/real_gray"
        app:layout_constraintStart_toStartOf="@id/iv_ranking_first"
        app:layout_constraintEnd_toEndOf="@id/iv_ranking_first"
        app:layout_constraintTop_toBottomOf="@id/iv_ranking_first"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_ranking_third"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/round"
        android:backgroundTint="@color/light_gray"
        android:layout_marginBottom="110dp"
        android:layout_marginEnd="35dp"
        app:layout_constraintEnd_toEndOf="@id/iv_ranking_bord"
        app:layout_constraintBottom_toTopOf="@id/iv_ranking_bord"/>

    <TextView
        android:id="@+id/tv_ranking_third_man"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="삼은성"
        android:textColor="@color/light_black"
        android:textSize="14sp"
        android:fontFamily="@font/ibm_semibold"
        app:layout_constraintStart_toStartOf="@id/iv_ranking_third"
        app:layout_constraintEnd_toEndOf="@id/iv_ranking_third"
        app:layout_constraintBottom_toTopOf="@id/iv_ranking_third"/>

    <TextView
        android:id="@+id/tv_ranking_third_p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0P"
        android:fontFamily="@font/ibm_medium"
        android:textSize="12sp"
        android:textColor="@color/real_gray"
        app:layout_constraintStart_toStartOf="@id/iv_ranking_third"
        app:layout_constraintEnd_toEndOf="@id/iv_ranking_third"
        app:layout_constraintTop_toBottomOf="@id/iv_ranking_third"/>

</androidx.constraintlayout.widget.ConstraintLayout>