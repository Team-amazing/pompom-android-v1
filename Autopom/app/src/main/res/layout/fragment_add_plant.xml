<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="600dp"
    android:background="@drawable/add_plant_back"
    tools:context=".home.AddPlantFragment">

    <ImageButton
        android:id="@+id/ib_addPlant"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:background="@drawable/add_pant_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="새로운 팜팜이 추가하기"
        android:textSize="14sp"
        android:textColor="@color/light_black"
        android:fontFamily="@font/ibm_semibold"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/ib_addPlant"
        app:layout_constraintEnd_toEndOf="@id/ib_addPlant"
        app:layout_constraintTop_toBottomOf="@id/ib_addPlant"/>

</androidx.constraintlayout.widget.ConstraintLayout>