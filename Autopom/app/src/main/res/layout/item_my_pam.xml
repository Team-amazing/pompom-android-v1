<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/radius"
        android:backgroundTint="@color/main2"
        android:layout_marginTop="12dp">

        <ImageView
            android:id="@+id/iv_my_pam_plant"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="@drawable/radius"
            android:backgroundTint="@color/light_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_my_pam_species"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="팜팜이 종 : 상추"
            android:fontFamily="@font/ibm_medium"
            android:textColor="@color/light_black"
            android:layout_marginTop="12dp"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toEndOf="@id/iv_my_pam_plant"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_my_pam_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="팜팜이 별명 : 응덩이"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/ibm_medium"
            android:textColor="@color/light_black"
            app:layout_constraintStart_toStartOf="@id/tv_my_pam_species"
            app:layout_constraintTop_toBottomOf="@id/tv_my_pam_species"/>

        <TextView
            android:id="@+id/tv_my_pam_birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="팜팜이 생일 : 2023-10-01"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/ibm_medium"
            android:textColor="@color/light_black"
            app:layout_constraintStart_toStartOf="@id/tv_my_pam_nick"
            app:layout_constraintTop_toBottomOf="@id/tv_my_pam_nick"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>